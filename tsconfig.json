{
    "compilerOptions": {
        "allowJs": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "lib": [
            "DOM",
            "ESNext"
        ],
        "outDir": "./lib",
        "rootDir": "src",
        "moduleResolution": "node",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "strict": true
    },
    "include": ["src"],
    "exclude": ["node_modules"]
}
